{% extends 'base.html.twig' %}

{% block title %}Ajouter Utilisateur{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block body %}
    <div class="container-fluid" >
        <h1 class="mb-3 text-center">Gestion Utilisateurs</h1>

        <div class="container-register text-center">
            <div></div>
            {{ form_start(registrationForm) }}
            {{ form_errors(registrationForm) }}
            <div class="container-register-middle">
                <h5 class="mb-3 text-center">Ajouter Utilisateur</h5>

                <div>
                    {{ form_label(registrationForm.email) }}
                </div>
                <div class="mb-2">
                    {{ form_widget(registrationForm.email) }}
                </div>
                {{ form_errors(registrationForm.email) }}

                <div>
                    {{ form_label(registrationForm.plainPassword, 'Mot de passe') }}
                </div>
                <div class="mb-2">
                    {{ form_widget(registrationForm.plainPassword) }}
                </div>
                <div>
                    {{ form_label(registrationForm.administrateur) }}
                </div>
                <div class="mb-3" id="blabla">
                    {{ form_widget(registrationForm.administrateur) }}
                </div>
            <div class="block-button mb-3">
                    <button type="submit" class="btn-gradient-green mr-5">Ajouter</button>
                    <a href="{{ path('app_association_index') }}" type="button" class="btn-gradient-red ml-5">Annuler</a>
            </div>
                <div>
                    <a href="{{ path('app_utilisateur_index') }}" class="text-center mb-3" id="lien-liste-utilisateurs">Voir liste utilisateurs</a>
                </div>

        </div>
        </div>
            <div class="form-group">
                <div class="col col-md-9 text-danger">
                    {% for label, messages in app.flashes %}
                        {% for message in messages %}
                            <div class="flash-{{ label }}">
                                {{ message }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                </div>
            </div>
            {{ form_end(registrationForm) }}

    </div>
{% endblock %}
