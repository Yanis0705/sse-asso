{% extends 'base.html.twig' %}

{% block title %}Ajouter Utilisateur{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/profil.css') }}">
{% endblock %}
{% block body %}
{#    form-group text-center#}
    <div class="" >
        <div class="col col-md-12">
            <h1 class="mb-3 text-center">Ajouter Utilisateur</h1>
        </div>
    </div>
    <div class="d-flex justify-content-center">
        {{ form_start(registrationForm) }}
        {{ form_errors(registrationForm) }}
        <div class="form-group">
            <div class="col col-md-7">
                {{ form_label(registrationForm.email) }}
            </div>
            <div class="col-12 col-md-9">
                {{ form_widget(registrationForm.email) }}
            </div>
            {{ form_errors(registrationForm.email) }}
        </div>
        <div class="form-group">
            <div class="col col-md-7">
                {{ form_label(registrationForm.plainPassword, 'Mot de passe') }}
            </div>
            <div class="col-12 col-md-9">
                {{ form_widget(registrationForm.plainPassword) }}
            </div>
        </div>
        <div class="form-group ">
            <div class="col col-md-7 mb-2">
                {{ form_label(registrationForm.administrateur) }}
            </div>
            <div class="col-12 col-md-9" id="blabla">
                {{ form_widget(registrationForm.administrateur) }}
            </div>
        </div>

        <div class="form-group text-center">
            <div class="col col-md-8">
                <button type="submit" class="btn btn-success">Ajouter</button>
            </div>
            <div class="col col-md-7">
                <a href="{{ path('app_association_index') }}" type="button" class="btn btn-outline-dark">Retour
                </a>
            </div>
        </div>
        <div class="form-group">
            <div class="col col-md-9 text-danger">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="flash-{{ label }}">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>
        </div>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
