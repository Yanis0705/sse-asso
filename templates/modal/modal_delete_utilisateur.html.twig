{% block stylesheets %}
    <link href="{{ asset('css/style.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}
    <div class="modal" id="modal-supp-utilisateur{{ utilisateur.id }}" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Suppression Utilisateur</h5>
                    <a type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"
                       href="{{ path('app_utilisateur_index') }}"></a>
                </div>
                <div class="modal-body">
                    <p>Êtes-vous sûr de vouloir supprimer cet utilisateur?</p>
                </div>
                <div class="modal-footer">
                    <a  type="button" class="btn-gradient-red" data-bs-dismiss="modal"
                        href="{{ path('app_utilisateur_index') }}">Annuler</a>
                    <form method="post" action="{{ path('app_utilisateur_delete', {'id': utilisateur.id}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ utilisateur.id) }}">
                        <button class="btn btn-gradient-green">Supprimer</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}