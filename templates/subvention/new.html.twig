{% extends 'base.html.twig' %}

{% block title %}Ajouter Subvention{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/ajout-ticket.css') }}">
{% endblock %}

{% block body %}
<div class="container mb-3 text-center">
    <h1 class="mb-3">Demande de Subvention</h1>
    {{ form_start(form) }}
    <div class="container-fluid text-center">
        <div></div>
        <div class="container-ajout-ticket">
            <div class="mb-4">
                <div class="form-group">
                    <label for="type-subvention-select">Type de subvention</label>
                    <select class="form-control" name="type-subvention-select" id="type-subvention-select" onchange="myFunction()">
                        <option value="Fonctionnement">Fonctionnement</option>
                        <option value="Equipement">Equipement</option>
                        <option value="Exceptionnelle">Exceptionnelle</option>
                        {% for parametrage in parametrages %}
                            <option value="{{ parametrage.id }}">{{ parametrage.libelle }}</option>
                        {% endfor %}
                    </select>
                </div>
{#                <div class="">#}
